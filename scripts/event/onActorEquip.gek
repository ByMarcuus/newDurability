scn newDurabilityOnEquip

int typeCode

Begin Function { ref actor, ref item }
    if eval (IsQuestItem item) ; TODO: Do we really want to skip quest items?
        return
    endif

    let typeCode := GetObjectType item
    if eval (typeCode == 40)
        Player.Call newDurabilitySetWeapon, item
    elseif eval (typeCode == 24)
        Player.Call newDurabilitySetArmor
    endif
End